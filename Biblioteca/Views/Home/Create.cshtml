@model LivroViewModel

@{
    ViewBag.Title = "Adicionar Livro";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h6 class="h6 mb-0 text-gray-800">Adicionar Livro</h6>
</div>


<div class="row">
    <div class="col-lg-12">
        <!-- Card -->
        <div class="card shadow mb-4">
            <!-- Card Header -->
            <div class="card-header">
                <h6 class="m-0 font-weight-normal">Livro: </h6>
            </div>
            <!-- Card Body -->
            <div class="card-body col-md-12 col-lg-8 align-self-center">

                @Html.HiddenFor(model => model.Id, new { id = "hfIdLivro" })

                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control"} })
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Autor, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.Autor, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(model => model.Autor, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.ISBN, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.AnoLancamento, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.AnoLancamento, new { htmlAttributes = new { @class = "form-control" } })
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(model => model.AnoLancamento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-md-12">

                        <a class="btn btn-primary float-left" href="../Index" id="Back"><i class=></i>&nbsp;&nbsp;Voltar</a>

                        <button class="btn btn-info  float-right" onclick="Salvar()"><i class=></i>&nbsp;&nbsp;Salvar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/js/CreateLivro.js" type="text/javascript"></script>
}


